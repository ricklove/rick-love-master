{
    "compilerOptions": {
        "moduleResolution": "node",
        // "target": "es2018",
        // "module": "es2020",
        "lib": [
            "dom",
            "es2017"
        ],
        "allowJs": true,
        // "checkJs": true,
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmit": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "console-simulator/*": [
                "code/games/console-simulator/src/*"
            ],
            "dork/*": [
                "code/games/dork/src/*"
            ],
            "utils/*": [
                "code/utils/src/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "code",
        "scripts"
    ]
}