{
    "compilerOptions": {
        "moduleResolution": "node",
        // "target": "es2018",
        // "module": "es2020",
        "lib": [
            "dom",
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020",
        ],
        "allowJs": true,
        "resolveJsonModule": true,
        // "checkJs": true,
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "downlevelIteration": true,
        "noEmit": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "composite": true,
        "paths": {
            "audio/*": [
                "code/audio/*"
            ],
            "auth/*": [
                "code/auth/*"
            ],
            "blog/*": [
                "code/blog/*"
            ],
            "blog-serverless/*": [
                "code/blog-serverless/*"
            ],
            "code-space-logic/*": [
                "code/code-space/code-space-logic/*"
            ],
            "code-space-node/*": [
                "code/code-space/code-space-node/*"
            ],
            "code-space-views/*": [
                "code/code-space/code-space-views/*"
            ],
            "code-space-vscode/*": [
                "code/code-space/code-space-vscode/*"
            ],
            "code-training/*": [
                "code/code-training/*"
            ],
            "comments/*": [
                "code/comments/*"
            ],
            "console-simulator/*": [
                "code/games/console-simulator/*"
            ],
            "controls-react/*": [
                "code/controls-react/*"
            ],
            "doodle/*": [
                "code/games/doodle/*"
            ],
            "dork/*": [
                "code/games/dork/*"
            ],
            "educational-games/*": [
                "code/games/educational-games/*"
            ],
            "eslint-plugin-custom-rules/*": [
                "code/eslint-plugin-custom-rules/*"
            ],
            "gatsby-lite/*": [
                "code/gatsby-lite/*"
            ],
            "hacker-news/*": [
                "code/hacker-news/*"
            ],
            "json-rpc/*": [
                "code/json-rpc/*"
            ],
            "payments/*": [
                "code/payments/*"
            ],
            "perception/*": [
                "code/perception/*"
            ],
            "performance/*": [
                "code/performance/*"
            ],
            "react-native-lite/*": [
                "code/react-native-lite/*"
            ],
            "themes/*": [
                "code/themes/*"
            ],
            "upload-api/*": [
                "code/networking/upload-api/*"
            ],
            "user-data-service/*": [
                "code/networking/user-data-service/*"
            ],
            "utils-react/*": [
                "code/utils-react/*"
            ],
            "utils-scripts/*": [
                "code/utils-scripts/*"
            ],
            "utils/*": [
                "code/utils/*"
            ],
            "web-mesh/*": [
                "code/networking/web-mesh/*"
            ],
            "websockets-api/*": [
                "code/networking/websockets-api/*"
            ]
        },
    },
    "references": [
        // {
        //     "path": "code/typescript-type-system-adventure"
        // }
    ],
    "exclude": [
        "node_modules",
        // "code/typescript-type-system-adventure"
    ],
    "include": [
        // Just include things I'm working on right now
        "code/utils/**/*",
        "code/utils-react/**/*",
        "code/themes/**/*",
        "code/react-native-lite/**/*",
        "code/controls-react/**/*",
        "code/comments/**/*",
        "code/code-training/**/*",
        "code/blog/**/*",
        // "code",
        // "scripts",
        // "projects",
        // "templates",
    ],
}