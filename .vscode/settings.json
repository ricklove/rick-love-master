{
  "typescript.tsdk": "./common/temp/node_modules/typescript/lib",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.nodePath": "./config/eslint/node_modules/eslint",
  "files.exclude": {
    "**/.DS_Store": false,
    "**/CVS": false,
    "**/.git": true,
    "**/node_modules": true,

    // build artifacts
    "**/lib": true,
    "**/.heft": true,
    "**/.rush": true,
    "**/*.build.log": true,
    "**/*.build.error.log": true,
    "**/.next": true,
    "**/temp": true,

    // required boilerplate
    // "**/config": true,
    "**/.eslintrc.cjs": true,
    "**/tsconfig.json": true
  }
}
