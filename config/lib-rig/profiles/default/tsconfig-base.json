{
  "$schema": "http://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "outDir": "../../../../../lib",
    "rootDir": "../../../../../",

    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": false,
    "allowUnreachableCode": false,

    "skipDefaultLibCheck": true,
    "skipLibCheck": true,

    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ES2017",
    "lib": ["ES2020"]
  },
  "include": ["../../../../../index.ts"]
}
